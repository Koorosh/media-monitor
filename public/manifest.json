{
  "manifest_version": 2,

  "name": "Media Monitor",
  "description": "This extension allows collect statistics about sites and store it in google spreadsheets.",
  "version": "1.0",
  "key": "pplclekakfepofncnbplddamfpceekbf",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "https://*.googleapis.com/*"
  ],
  "oauth2":{
    "client_id":"43867058937-s50ansfggt1t1e5u41fjm23ejb13jtac.apps.googleusercontent.com",
    "scopes":[
      "https://www.googleapis.com/auth/drive",
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_security_policy":"script-src 'self' https://apis.google.com; object-src 'self'"
}
